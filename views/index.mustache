      <div class="category-menu">
        <div class="container">
          <ul class="list-inline">
            {{#categories}}
            <li><a href="#{{slug}}">{{name}}</a></li>
            {{/categories}}
            
          </ul>
          <div class="pull-right">Revisa el <a href="https://docs.google.com/a/votainteligente.cl/document/d/1VRfCD9xDzvbOfJpnjHqUdnFtFeQ1akxix_ZQxP6EyOM/edit" target="_blank">informe</a> y la <a href="https://docs.google.com/a/votainteligente.cl/spreadsheets/d/1ejBFuK087wsuvi2eFn00IzfcNKlPJtO1WbjDBmv8tb0/edit" target="_blank">base de datos.</a></div>
